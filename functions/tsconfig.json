{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "paths": {
      "@shared/*": ["src/shared/*"],
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
